<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <span>Amount: $5.00</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js"
    class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-description="Pay for your Rentr Reservation"
    data-amount="@reservation.listing.price * 100"
    data-email="TEST@reservation.user.email"
  >
  </script>
<% end %>

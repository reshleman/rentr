<h2>Search</h2>

<%= form_tag(search_path, method: :get) do %>
  <div>
    <%= label_tag :city %>
    <%= search_field_tag :city %>
  </div>
  <div>
    <%= label_tag :max_price %>
    <%= search_field_tag :price %>
  </div>
  <div>
    <%= label_tag :propery_category %>
    <%= select_tag :property_category, options_from_collection_for_select(@property_categories, :id, :name), include_blank: true %>
  </div>
  <div>
    <%= submit_tag "Search" %>
  </div>
<% end %>

<h2>Create a Listing</h2>

<%= form_for @listing do |form| %>
  <div>
    <%= form.label :property_type %>
    <%= form.collection_select(:property_type_id, @property_types, :id, :name) %>
  </div>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>
  <div>
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>
  <div>
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>
  <div>
    <%= form.label :accommodates %>
    <%= form.select :accommodates, (0..99) %>
  </div>
  <div>
    <%= form.submit "Create Listing" %>
  </div>
<% end %>

<h2><%= @listing.title %></h2>

<% if current_user.owns?(@listing) %>
  <%= link_to "Add Availability", new_listing_available_date_range_path(@listing) %>
<% end %>

<p><%= @listing.description %></p>

<p>$<%= @listing.price %> per night.</p>

<% @listing.available_date_ranges.each do |range| %>
  <p><%= range.start_date.to_formatted_s(:long_ordinal) %> to <%= range.end_date.to_formatted_s(:long_ordinal) %></p>
<% end %>

<p>
  <%= @listing.address %><br>
  <%= @listing.city %>
</p>
